<UserControl x:Class="ToggleSwitch.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToggleSwitch"
             mc:Ignorable="d" Height="44" Width="72">
    <Viewbox Margin="0,2,2,1">
        <Grid HorizontalAlignment="Left" Height="18" Margin="0" VerticalAlignment="Top" Width="27">
            <Rectangle x:Name="Back" Fill="#FFEE2F18" HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Width="24" Margin="2,4,0,0" RadiusY="5" RadiusX="5" MouseLeftButtonDown="Back_MouseLeftButtonDown" />
            <Ellipse x:Name="Dot" Fill="Black" HorizontalAlignment="Center" Height="7" VerticalAlignment="Center" Width="7" MouseLeftButtonDown="Dot_MouseLeftButtonDown" />
        </Grid>
    </Viewbox>
</UserControl>